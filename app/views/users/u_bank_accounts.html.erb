<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-10"><h2><%= @user.name %> <%= @user.last_name %></h2>
    <ul class="nav nav-pills">
      <li role="presentation" class="enabled">
        <div><%= link_to 'Profile', profile_path(@user) %></div>
      </li>
      <li role="presentation" class="enabled" style="margin-left: 10px">
        <div><%= link_to 'Campaigns', campaigns_path(@user) %></div>
      </li>
      <li role="presentation" class="enabled" style="margin-left: 10px">
        <div><%= link_to 'Contributions', contributions_path(@user) %></div>
      </li>
      <li role="presentation" class="enabled" style="margin-left: 10px">
        <div><%= link_to 'Wishlists', u_wishlists_path(@user) %></div>
      </li>
      <li role="presentation" class="enabled" style="margin-left: 10px">
        <div><%= link_to 'Bank Account', bank_accounts_path %></div>
      </li>
    </ul>
    <hr>
    <h3>Bank Account Information</h3>

    <%= link_to 'New Bank Account', new_bank_account_path %>

    <div class="row align-items-center">
      <div class="col-lg-10">
        <table class="table table-hover">
          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Account Type</th>
            <th scope="col">Account Number</th>
            <th scope="col">Bank Number</th>
          </tr>
          </thead>
          <tbody>
          <%i=1 %>
          <% @bank_accounts.where(user_id: current_user).each do |ba| %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= ba.account_type %></td>
              <td><%= ba.account_number %></td>
              <td><%= ba.bank_name %></td>
              <td><%= link_to 'Edit', edit_bank_account_path(ba) %> | <%= link_to 'Destroy', ba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% i = i + 1%>
          <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>


  <div class="col-md-1"></div>
  </div>
</div>